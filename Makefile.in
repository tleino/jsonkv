SHELL = /bin/sh
CFLAGS = -g -Wall -pedantic -std=c99 @SYSTEM_CFLAGS@
LDFLAGS =

prefix = @prefix@
exec_prefix = $(prefix)
bindir = $(exec_prefix)/bin
libdir = $(exec_prefix)/lib
datarootdir = $(prefix)/share
mandir = $(datarootdir)/man

INSTALL ?= install
INSTALLFLAGS ?= -D

SRCS=jsonv.c jsonkv.c \
	
DISTFILES=\
	Makefile.in\
	configure\
	README\
	LICENSE
PROG=jsonkv
MAN=jsonkv.1

OBJS=$(SRCS:.c=.o)

all: $(PROG)

$(PROG): $(OBJS)
	$(CC) -o$@ $(OBJS) $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) -c $<

clean:
	rm -f $(OBJS) $(PROG)

install: $(PROG)
	$(INSTALL) $(INSTALLFLAGS) $(PROG) $(DESTDIR)$(bindir)
	$(INSTALL) $(INSTALLFLAGS) -m 444 $(MAN) \
		$(DESTDIR)$(mandir)/man1/$(MAN)

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(PROG)
	rm -f $(DESTDIR)$(mandir)/man1/$(MAN)
